<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views" stylesheets="end_style.css">
   <children>
      <VBox alignment="CENTER" spacing="20" prefWidth="600" prefHeight="400">
         <Label text="遊戲結束">
            <font>
               <Font size="64.0" />
            </font>
         </Label>
         <Label text="感謝您的遊玩">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <HBox alignment="CENTER" spacing="30">
            <Button fx:id="viewRank" mnemonicParsing="false" onAction="#viewRankClicked" text="查看排行榜">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="returnToMain" mnemonicParsing="false" onAction="#returnToMainClicked" text="回到主畫面">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="exit" mnemonicParsing="false" onAction="#exitClicked" text="離開">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
