<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="448.0" prefWidth="675.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views">

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>

   <children>
      <!-- This VBox centers the AnchorPane and its children in the middle of the screen -->
      <VBox alignment="CENTER" spacing="10.0">

         <!-- User Registration Title -->
         <Label text="用戶註冊">
            <font>
               <Font size="36.0"/>
            </font>
         </Label>

         <!-- Username and Password -->
         <HBox alignment="CENTER" spacing="10.0">
            <Label text="用戶名">
               <font>
                  <Font size="24.0"/>
               </font>
            </Label>
            <TextField fx:id="username" prefHeight="41.0" prefWidth="273.0"/>
         </HBox>

         <HBox alignment="CENTER" spacing="10.0">
            <Label text="密碼">
               <font>
                  <Font size="24.0"/>
               </font>
            </Label>
            <PasswordField fx:id="password" prefHeight="41.0" prefWidth="273.0"/>
         </HBox>

         <!-- Email Field -->
         <HBox alignment="CENTER" spacing="10.0">
            <Label text="郵箱">
               <font>
                  <Font size="24.0"/>
               </font>
            </Label>
            <TextField fx:id="email" prefHeight="41.0" prefWidth="273.0"/>
         </HBox>

         <!-- Buttons: Confirm and Cancel -->
         <HBox alignment="CENTER" spacing="50.0">
            <Button fx:id="submit" text="確認" onAction="#submitclicked" prefWidth="100">
               <font>
                  <Font size="18.0"/>
               </font>
            </Button>
            <Button fx:id="cancel" text="取消" onAction="#cancelclicked" prefWidth="100">
               <font>
                  <Font size="18.0"/>
               </font>
            </Button>
         </HBox>

      </VBox>
   </children>

</VBox>
